{%- liquid
  assign single = true
  if section.blocks.size > 1
    assign single = false
  endif
-%}
{% style %}
#id-{{ section.id }} {
  --announcement-font-size: {{ section.settings.font_size }}px;
}
{% endstyle %}
<xuer-announcement-bar
  id="id-{{ section.id }}" 
  class="announcement-bar padding-ver-1"
  data-swiper-container="swiper-{{ section.id }}"
>
  <div class="announcement-bar-list" 
    id="swiper-{{ section.id }}" 
    {% if single %}data-swiper-disable="true" {% endif %}
  >
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        <div class="swiper-slide">
          {%- if block.settings.text != blank -%}
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="announcement-bar-link ">
            {%- endif -%}
                <div class="layout-width">
                  <p class="announcement-bar__message">
                    {{ block.settings.text }}
                  </p>
                </div>
            {%- if block.settings.link != blank -%}
              </a>
            {%- endif -%}
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</xuer-announcement-bar>
{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "settings": [
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 14
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "announcement",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Welcome to our storeï¼Œ<a>learn more</a></p>"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
