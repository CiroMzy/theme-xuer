{%- liquid
-%}


<footer class="site-footer ">
  <div class="footer-main">
    <div class="container">
      <div class="row">
        <div 
          id="themedraft_about_company_widget-3"
          class="widget col-lg-3 col-md-6 widget_themedraft_about_company_widget"
        >
          {%- if section.settings.logo_image -%}
            <div id="text-4" class="widget widget_text text-left Aqua-footer-logo">
              <div class="textwidget">
                <p>
                  <img loading="lazy" class="image wp-image-6321 attachment-140x47 size-140x47"
                    style="max-width: 100%; height: auto;" src="{{ section.settings.logo_image | img_url }}" alt=""
                    width="140" height="47" 
                  />
                </p>
              </div>
            </div>
          {%- endif -%}
          {%- if section.settings.footer_describe and section.settings.footer_describe != "" -%}
          <div id="text-2" class="widget widget_text text-left">
            <div class="textwidget">
              <p>
                {{ section.settings.footer_describe}}
              </p>
            </div>
          </div>
          {%- endif -%}
          
          {% render 'social', section: section %}
        </div>

        <div class="footer-block-container col-lg-9 col-md-6 widget-column">
          <div class="row">
            {%- for item in section.blocks -%}
              {%- if item.type == '@app' -%}
                <div class="widget col-lg-4 col-md-6">
                  {% render item %}
                </div>
              {%- endif -%}    
              {%- if item.type == 'link_list' -%}
                <div class="widget col-lg-4 col-md-6 widget_themedraft_nav_menu">
                  <h4 class="widget-title">{{item.settings.heading}}</h4>
                  <div class="menu-quick-links-container">
                    <ul id="menu-quick-links" class="menu">
                      {%- if item.settings.menu and item.settings.menu.links -%}
                        {%- for menu in item.settings.menu.links -%}
                          <li
                            id="menu-item-137"
                            class="menu-item menu-item-type-post_type menu-item-object-page menu-item-137"
                          >
                            <a href="{{menu.url}}">{{menu.title}}</a>
                          </li>
                        {%- endfor -%}
                      {%- endif -%}
                    </ul>
                  </div>
                </div>
              {%- endif -%}

              {%- if item.type == 'newsletter' -%}
                <div
                  id="themedraft_contact_info_widget-2"
                  class="widget col-lg-4 col-md-6 themedraft_contact_info_widget"
                >
                  <h4 class="widget-title">{{item.settings.heading}}</h4>
                  {%-if item.settings.newsletter_info and  item.settings.newsletter_info != "" -%}
                    <div class="newsletter-content">{{item.settings.newsletter_info}}</div>
                  {%- endif -%}
                  <div class="footer-subscribe-form">
                    {% render 'snippets/newsletter_snippets' %}
                  </div>
                </div>
              {%- endif -%}

              {%- if item.type == 'company_info' -%}
                <div
                  id="themedraft_contact_info_widget-2"
                  class="widget col-lg-4 col-md-6 themedraft_contact_info_widget"
                >
                  <h4 class="widget-title">{{item.settings.heading}}</h4>
                  <div class="footer-address">
                    <ul>
                      {%-if item.settings.company_info_address and  item.settings.company_info_address != "" -%}
                        <li>
                          <i class="fas fa-map-marker-alt"></i>
                          <span>{{ item.settings.company_info_address }}</span>
                        </li>
                      {%- endif -%}
                      {%-if item.settings.company_info_email and  item.settings.company_info_email != "" -%}
                      <li>
                        <i class="far fa-envelope"></i>
                        <span>{{ item.settings.company_info_email }}</span>
                      </li>
                      {%- endif -%}
                      {%-if item.settings.company_info_phone and  item.settings.company_info_phone != "" -%}
                      <li>
                        <i class="fas fa-headset"></i>
                        <span>{{ item.settings.company_info_phone }}</span>
                      </li>
                      {%- endif -%}
                    </ul>
                  </div>
                </div>
              {%- endif -%}

            {%- endfor -%}
          </div>
        </div>

      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_language_selector",
      "label": "Enable language selector",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": false,
      "label": "show social"
    }
  ],
  "max_blocks": 6,
  "blocks": [
    {
      "type": "link_list",
      "name": "Link list",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Quick links",
          "label": "Quick links heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Link list"
        }
      ]
    },
    {
      "type": "company_info",
      "name": "Company info",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Contact Information",
          "label": "Contact information"
        },
        {
          "type": "text",
          "id": "company_info_address",
          "default": "1635 Franklin Street Montgomery, Near Sherwood Mall. AL 36104",
          "label": "Address"
        },
        {
          "type": "text",
          "id": "company_info_email",
          "default": "info@abc.com",
          "label": "Email"
        },
        {
          "type": "text",
          "id": "company_info_phone",
          "default": "+1-202-555-1234",
          "label": "phone"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Newsletter",
          "label": "Newsletter"
        },
        {
          "type": "text",
          "id": "newsletter_info",
          "default": "Sign Up to our Newsletter to get the latest news and offers.",
          "label": "Newsletter info"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list"
      },
      {
        "type": "company_info"
      },
      {
        "type": "newsletter"
      }
    ]
  }
}
{% endschema %}
