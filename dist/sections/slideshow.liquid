{%- liquid
  assign main_background_color = '#ffffff'
  for block in section.blocks
    if forloop.first == true
      assign main_background_color = block.settings.slide_background_color
    endif
  endfor
-%}

<xuer-slideshow class="slideshow custom-section" id="section-{{ section.id }}">
  <div
    swiper
    id="swiper-{{ section.id }}" 
    class="swiper-container" 
    style="background: {{ main_background_color }}"
  >
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        <div 
          class="swiper-slide" 
          data-background-color="{{ block.settings.slide_background_color }}" 
          id="block-{{ block.id }}"
          data-text-color="{{ block.settings.text_color }}"
        >
          {% style %}
            #block-{{ block.id }} {
              --block_text_color: {{ block.settings.text_color }};
              --block_text_color_rgb: {{ block.settings.text_color.red }},{{ block.settings.text_color.green }},{{ block.settings.text_color.blue }};
            }
          {% endstyle %}
          <div class="slideshow-image xuer-image-wrapper {{ section.settings.section_height }}" >
            {%- if block.settings.image != blank -%}
              {%- render 'image', image: block.settings.image -%}
            {%- else -%}
              <div class="xuer-placeholder-image xuer-full">
                {{- 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' -}}
              </div>
            {%- endif -%}
          </div>
          <div class="slideshow-content" style="color: {{ block.settings.text_color }};">
            <h2 class="slideshow-content_heading xuer-h2 text">
              {{ block.settings.heading }}
            </h2>
            <div class="slideshow-content_subheading">
              {{ block.settings.subheading }}
            </div>
            {% if block.settings.button_label != blank %}
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}">  
              {% endif %}
                {% render 'form-button', label: block.settings.button_label, className: 'slideshow-content_button' %}
              {% if block.settings.link != blank %}
                </a>
              {% endif %}
            {% endif %}
          </div>
        </div>
      {%- endfor -%}
    </div>

		<div class="swiper-button-prev" style="color: {{ section.settings.arrorw_dots_color }}">
      {% render 'icon', name: 'arrow-left-line' %}
    </div>
		<div class="swiper-button-next" style="color: {{ section.settings.arrorw_dots_color }}">
      {% render 'icon', name: 'arrow-right-line' %}
    </div>
  </div>
</xuer-slideshow>
{% schema %}
{
  "name": "slideshow",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "section_height",
      "label": "Section height",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to first image"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "full",
          "label": "Full screen"
        },
        {
          "value": "fixed",
          "label": "Fixed height"
        }
      ],
      "default": "adapt"
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 200,
      "max": 1000,
      "step": 20,
      "unit": "px",
      "label": "Desktop fixed height",
      "default": 600
    },
    {
      "type": "range",
      "id": "height_mobile",
      "min": 100,
      "max": 1000,
      "step": 20,
      "unit": "px",
      "label": "Mobile fixed height",
      "default": 460
    },
    {
      "id": "mobile_text_under",
      "type": "checkbox",
      "label": "Show text below image on mobile",
      "default": false
    },
    {
      "id": "show_arrow",
      "type": "checkbox",
      "label": "Show arrow",
      "default": true
    },
    {
      "id": "show_dots",
      "type": "checkbox",
      "label": "Show dots",
      "default": false
    },
    {
      "type": "color",
      "id": "arrorw_dots_color",
      "label": "Arrow and dots color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "color",
          "id": "slide_background_color",
          "label": "Slide background color"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Image slide",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subheading",
          "default": "Tell your brand's story through images",
          "label": "Subheading"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button label"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#ffffff"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
