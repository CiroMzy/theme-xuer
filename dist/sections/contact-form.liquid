      "id": "use_section_space",
      "label": "Use section space",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "name_input",
      "name": "Name input",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "is_half_width",
          "label": "Is half width",
          "default": false
        }
      ]
    },
    {
      "type": "email_input",
      "name": "Email input",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "is_half_width",
          "label": "Is half width",
          "default": false
        }
      ]
    },
    {
      "type": "message_input",
      "name": "Message input",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "is_half_width",
          "label": "Is half width",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "use_long_text",
          "label": "Use long text",
          "default": false
        }
      ]
    },
    {
      "type": "text",
      "name": "Text field",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Custom text field"
        },
        {
          "type": "checkbox",
          "id": "use_long_text",
          "label": "Use long text",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "is_required",
          "label": "Field is required",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "is_half_width",
          "label": "Is half width",
          "default": false
        }
      ]
    },
    {
      "type": "dropdown",
      "name": "Dropdown field",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Name",
          "default": "Custom dropdown field"
        },
        {
          "type": "text",
          "id": "values",
          "label": "Values",
          "info": "Separate each value by a comma.",
          "default": "value 1, value 2, value 3"
        },
        {
          "type": "checkbox",
          "id": "is_required",
          "label": "Field is required",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "is_half_width",
          "label": "Is half width",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact form",
      "blocks": [
        {
          "type": "name_input",
          "settings": {
            "is_half_width": true
          }
        },
        {
          "type": "email_input",
          "settings": {
            "is_half_width": true
          }
        },
        {
          "type": "message_input"
        }
      ]
    }
  ]
}
{% endschema %}
