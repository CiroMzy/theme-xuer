<div class="account account-main page_width">
  <aside class="account-main_aside">
    <div class="account-main_info">
      <h2 class="account-main_user xuer-h4 xuer-line2">
        {{ customer.email }}
      </h2>
      <div  class="xuer-line2 account-main_logout xuer-underline">
        {% render 'icon', name: 'account' %}
        <a href="{{ routes.account_logout_url }}">
          {{ 'account.log_out' | t }}
        </a>
      </div>
    </div>
    <div class="account-menu">
      <ul>
        <li class="account-menu_item orders ">
          <a href="{{ routes.customer_url }}">
          {{ 'account.orders' | t }}
          </a>
        </li>
        <li class="account-menu_item address active">
          <a href="{{ routes.account_addresses_url }}">
          {{ 'account.addresses' | t }}
          </a>
        </li>
      </ul>
    </div>
  </aside>
  <main class="account-main_main">
    <h1 class="account-main_title xuer-h1">
      {{ 'account.addresses' | t }}
    </h1>
    <p class="account-main_info xuer-line2">
      {{ 'account.no_orders' | t }}
    </p>
    <div class="add-address" drawer-open data-action-type="add-address-tpl">
      {% render 'form-button', text: 'account.add_addresses', className: 'xuer-line2' %}
    </div>
  </main>
</div>

<template id="add-address-tpl" data-title="{{ 'account.add_addresses' | t }}">
  
  {%- form 'customer_address', customer.new_address, class: 'form' -%}
    {%- liquid
      render 'form-error-msg', form: form, multi: true
      render 'form-input', id: "address-new[first_name]", name: "address-new[first_name]", label: 'account.first_name', className: "xuer-line2"
      render 'form-input', id: "address-new[last_name]", name: "address-new[last_name]", label: 'account.last_name', className: "xuer-line2"
      render 'form-input', id: "address-new[company]", name: "address-new[company]", label: 'account.company', className: "xuer-line2"
      render 'form-input', id: "address-new[phone]", name: "address-new[phone]", label: 'account.phone', className: "xuer-line2"
      render 'form-input', id: "address-new[address1]", name: "address-new[address1]", label: 'account.addresse1', className: "xuer-line2"
      render 'form-input', id: "address-new[address2]", name: "address-new[address2]", label: 'account.addresse2', className: "xuer-line2"
      render 'form-input', id: "address-new[city]", name: "address-new[city]", label: 'account.city', className: "xuer-line2"
      render 'form-input', id: "address-new[zip]", name: "address-new[zip]", label: 'account.zip', className: "xuer-line2"
      
      render 'form-button', is_outline: true, text: 'account.add_addresses', className: 'xuer-line2', is_block: true, type: 'submit'
    -%}
    
      <div class="input">
        <div class="select-wrapper is-filled">
          <select is="country-selector" class="select" name="address[country]" id="address-new[country]" aria-owns="address-new-province-container">{{ all_country_option_tags }}</select>
          {%- render 'icon' with 'chevron' -%}
        </div>

        <label for="address-new[country]" class="input__label">{{ 'customer.addresses.country' | t }}</label>
      </div>

      <div id="address-new-province-container" class="input" hidden>
        <div class="select-wrapper is-filled">
          <select class="select" name="address[province]" id="address-new[province]"></select>
          {%- render 'icon' with 'chevron' -%}
        </div>

        <label for="address-new[province]" class="input__label">{{ 'customer.addresses.province' | t }}</label>
      </div>

    <div class="input input--checkbox">
      <div class="checkbox-container">
        <input type="checkbox" class="checkbox" name="address[default]" id="address-new[default]" value="0">
        <label for="address-new[default]" class="text--subdued">{{ 'customer.addresses.set_default' | t }}</label>
      </div>
    </div>

  {%- endform -%}
  
</template>
{% schema %}
{
  "name": "t:sections.main-addresses.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
