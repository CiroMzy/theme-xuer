
<div class="ligo-list {{ section.settings.use_section_space }} {{ section.settings.use_alt_color }}">
  {% if section.settings.title != blank %}
    <h2 class="xuer-h2 xuer-section-title">{{ section.settings.title }}</h2>
  {% endif %}
  {%- if section.blocks.size > 0 -%}

    <xuer-list class="logo-list-main page_width xuer-list-grid-6">      
      {%- for block in section.blocks -%}
        <xuer-list-item class="xuer-image-enlarge">
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="xuer-link_keep ">
          {%- endif -%}
            {%- 
              render 'image', 
              image: block.settings.image,
              sizes: '50vw',
              is_inbox: true
            -%}
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        </xuer-list-item>
      {%- endfor -%}
    </xuer-list>
  {%- endif -%}
</div>



{% schema %}
{
  "name": "Logo list",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Logo list"
    },
    {
      "type": "checkbox",
      "id": "use_alt_color",
      "label": "Use alternate section color",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "use_section_space",
      "label": "Use section space",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo list",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}
