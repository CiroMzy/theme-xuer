{% style %}
#section-{{ section.id }} {
  --alignment: {{ section.settings.alignment }};
}
{% endstyle %}
<div id="section-{{ section.id }}" class="multicolumn xuer-shopify-section {% if section.settings.use_section_space %} use_section_space{%- endif -%} {% if section.settings.use_alt_color %} use_alt_color{%- endif -%}">
  {% if section.settings.title != blank %}
    <h2 class="xuer-h2 xuer-section-title">{{ section.settings.title }}</h2>
  {% endif %}
  <xuer-list class="collection-list_main page_width xuer-list-grid-{{ section.settings.columns_per_row }}">
    {%- for block in section.blocks -%}
      <xuer-list-item class="xuer-list-item" xuer-animated="xuer-animate_fadeIn" >
        {% if section.settings.enable_image %}
          <div class="text-column__image lightly-spaced-row xuer-line2">
            {%- 
              render 'image', 
              image: block.settings.image, 
              aspect_ratio: section.settings.aspect_ratio,
              is_cover: true,
              width: section.settings.image_width
            -%}
          </div>
        {% endif %}

        <div class="multicolumn_block_main">
          {% if block.settings.column_title != blank %}
            <h3 class="xuer-h3 xuer-block-title xuer-line2">{{ block.settings.column_title }}</h3>
          {% endif %}

          {% if block.settings.column_text != blank %}
            <div class="xuer-text xuer-line2">{{ block.settings.column_text }}</div>
          {% endif %}

          {% if block.settings.button_label != blank %}
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}">  
            {% endif %}
              {% render 'form-button', is_second_button: true, label: block.settings.button_label, className: 'slideshow-content_button' %}
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          {% endif %}
        </div>
      </xuer-list-item>
    {%- endfor -%}

  </xuer-list>
</div>

{% schema %}
{
  "name": "Multi-column",
  "class": "section-multi-column",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Multi-column"
    },
    {
      "type": "range",
      "id": "columns_per_row",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columns per row",
      "default": 4
    },
    {
      "id": "enable_image",
      "type": "checkbox",
      "label": "Enable image",
      "default": true
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 30,
      "max": 300,
      "step": 5,
      "label": "Image width",
      "default": 80
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Image ratio",
      "options": [
        {
          "value": "",
          "label": "Auto"
        },
        {
          "value": "0.67",
          "label": "Portrait (2:3)"
        },
        {
          "value": "1.0",
          "label": "Square (1:1)"
        },
        {
          "value": "1.33",
          "label": "Landscape (4:3)"
        },
        {
          "value": "1.78",
          "label": "Wide (16:9)"
        }
      ],
      "default": "1.0"
    },
    {
      "type": "checkbox",
      "id": "use_alt_color",
      "label": "Use alternate section color",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "use_section_space",
      "label": "Use section space",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "column_title",
          "label": "Column heading",
          "default": "Column heading"
        },
        {
          "type": "richtext",
          "id": "column_text",
          "label": "Column text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Multi-column",
      "settings": {
      },
      "blocks": [
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        }
      ]
    }
  ]
}
{% endschema %}
