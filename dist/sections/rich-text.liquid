
<div class="rich-text xuer-align {{ section.settings.align_text }} page_width  xuer-shopify-section {% if section.settings.use_section_space %} use_section_space{%- endif -%} {% if section.settings.use_alt_color %} use_alt_color{%- endif -%}" xuer-animated>
  {%- for block in section.blocks -%}
    <div class="rich-text_block">
      {%- case block.type -%}
        {%- when 'heading' -%}
          <h2 class="xuer-h2 xuer-section-title">{{ block.settings.title | escape }}</h2>
        {%- when 'page' -%}
          <div class="rich-text_page xuer-line2">
            {%- if block.settings.page_text != blank -%}
              {{ pages[block.settings.page_text].content }}
            {%- else -%}
              {{ 'sections.rich_text_page_empty' | t }}
            {%- endif -%}
          </div>
        {%- when 'text' -%}
          <div class="rich-text_text  xuer-line2">
            {%- if block.settings.text != blank -%}
              {{ block.settings.text }}
            {%- endif -%}
          </div>
        {%- when 'button' -%}
          {% if block.settings.button_label != blank %}
            <div class="rich-text_button  xuer-line2">
              {% render 'form-button', label: block.settings.button_label, link: block.settings.link %}
            </div>
          {% endif %}
      {%- endcase -%}
    </div>
  {%- endfor -%}
</div>
{% schema %}
{
  "name": "Rich text",
  "tag": "section",
  "settings": [
    {
      "type": "select",
      "id": "align_text",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Centered"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Text alignment"
    },
    {
      "type": "checkbox",
      "id": "use_alt_color",
      "label": "Use alternate section color",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "use_section_space",
      "label": "Use section space",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Rich text"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "id": "text",
          "type": "richtext",
          "label": "Text",
          "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Button"
        }
      ]
    },
    {
      "type": "page",
      "name": "Page",
      "settings": [
        {
          "id": "page_text",
          "type": "page",
          "label": "page"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rich text",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
