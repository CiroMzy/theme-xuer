<div class="account account-main page_width">
  <aside class="account-main_aside">
    <div class="account-main_info">
      <h2 class="account-main_user xuer-h4 xuer-line2">
        {{ customer.email }}
      </h2>
      <div  class="xuer-line2 account-main_logout xuer-underline">
        {% render 'icon', name: 'account' %}
        <a href="{{ routes.account_logout_url }}">
          {{ 'account.log_out' | t }}
        </a>
      </div>
    </div>
    <div class="account-menu">
      <ul>
        <li class="account-menu_item orders active">
          <a href="{{ routes.customer_url }}">
          {{ 'account.orders' | t }}
          </a>
        </li>
        <li class="account-menu_item address">
          <a href="{{ routes.account_addresses_url }}">
          {{ 'account.addresses' | t }}
          </a>
        </li>
      </ul>
    </div>
  </aside>
  <main class="account-main_main">
    <h1 class="account-main_title xuer-line2 xuer-uppercase">
      {{ 'account.orders' | t }}
    </h1>
    
    {% if customer.addresses_count < 1 %}
      <div class="account-main_empty">
        <p class="account-main_info xuer-line2">
          {{ 'account.no_orders' | t }}
        </p>
        <div class="add-address" drawer-open data-action-type="add-address-tpl">
          {% render 'form-button', text: 'cart.start_shopping', uppercase: true, link: routes.all_products_collection_url %}
        </div>
      </div>
    {% else %}
    {% endif %}
    <p>
      订单数据：{{ customer.orders | json }}
    </p>
    
  </main>
</div>

{% schema %}
{
  "name": "t:sections.main-account.name",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
