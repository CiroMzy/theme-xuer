
{% comment %}

  Accepts:
  - id: {String} 
  - name: {String} 
  - label: {String} 
  - className: {String} 

{% endcomment %}

<xuer-form-checkbox>
  <div class="xuer-checkbox_wrapper  {{ className }}">
    <input type="checkbox" class="xuer-checkbox" xuer-input name="{{ name }}" id="{{ id }}" value="0">
    <div class="xuer-fake-rect"></div>
    <label for="{{ id }}" class="xuer-checkbox_label">{{ label | t }}</label>
  </div>
</xuer-form-checkbox>
