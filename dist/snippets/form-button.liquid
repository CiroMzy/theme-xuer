
{% comment %}
  Renders a radio

  Accepts:
  - text: {String}
  - label: {String}
  - size: {String}
  - is_outline: {Boolean} 
  - className: {String} 
  - is_block: {Boolean} 
  - type: {String} 

  Usage:
  {% render 'form-radio', is_checked: true,value: 'red',name: 'color', label: 'color'   %}
{% endcomment %}



{%- liquid
  assign type = type | default: 'text'
  assign size_class = size

  if is_block == true
    assign block_class = "xuer-button_block"
  endif
-%}
<button 
  class="xuer-button  {{ size_class }} {{ className }} {{ block_class }}"
  {% if type != blank %} 
    type="{{ type }}"
  {% endif %}
>
  <div class="xuer-button-content">
    {% render 'icon', name: 'loading' %}
    {{ text | t }}
    {{ label }}
  </div>
</button>