
{% comment %}

  Accepts:
  - id: {String} 
  - type: {String} 
  - name: {String} 
  - label: {String} 
  - required: {Boolean} 
  - className: {String} 
  - country: {String} 
  - province: {String} 

{% endcomment %}


<xuer-form-address-select>
  {% render 
    'form-select', 
    id: "address[country]", name: "address[country]", 
    label: 'account.country', className: "xuer-line2", 
    attr: 'country',
    options: all_country_option_tags,
    value: country
  %}
  {% render 'form-select', id: "address[province]", name: "address[province]", label: 'account.province', className: "xuer-line2", attr: 'province', value: province %}
