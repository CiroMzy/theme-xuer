

<xuer-price-range 
  class="xuer-price-range_container" 
  data-value-start="{{ value_start }}" 
  data-value-end="{{ value_end }}"
  data-range-start="{{ range_start }}"
  data-range-end="{{ range_end }}"
>
  <div class="price-title">
    <span class="price-price_content">{{ cart.currency.symbol }}<span class="price-start">{{ value_start }}</span></span>
    <span class="price-price_content">{{ cart.currency.symbol }}<span class="price-end">{{ value_end }}</span></span>
  </div>
  <input type="hidden" price_gte name="filter.v.price.gte" value="{{ value_start }}" />
  <input type="hidden" price_lte name="filter.v.price.lte" value="{{ value_end }}" />
  <input class="range-slider" type="hidden" value="{{ value_start }},{{ value_end }}"/>
</xuer-price-range>