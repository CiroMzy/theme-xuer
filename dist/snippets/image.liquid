{%- liquid
  assign img_class = img_class
  assign width = width
  if width
    assign height = width | divided_by: image.aspect_ratio | round
  endif
-%}

<img 
  src="{{ image | image_url }}" 
  alt="{{ image.alt | escape }}"  
  width="{{ width }}" 
  height="{{ height }}" 
  loading="lazy" 
  class="xuer-image {{ img_class }}"
/>