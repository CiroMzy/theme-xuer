
{% comment %}

  Accepts:
  - id: {String} 
  - type: {String} 
  - name: {String} 
  - label: {String} 
  - required: {Boolean} 
  - className: {String} 
  - attr: {String} 
  - options: {Html} 

{% endcomment %}


<xuer-form-select {{ attr }} >
  <div class="xuer-select_wrapper {{ className }}">
    <select 
      class="xuer-select xuer-focus" 
      name="{{ name }}" 
      id="{{ id }}"
    >
      {{ options }}
    </select>
    <label for="{{ id }}" class="xuer-select_label">{{ label | t }}</label>
    {%- render 'icon', name: 'dawn' -%}
</div>
</xuer-form-select>
