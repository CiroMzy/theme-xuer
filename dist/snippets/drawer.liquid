<xuer-drawer class="drawer-container">
  <div class="drawer-bg" action-close ></div>
  <div class="drawer-main" >
    <div class="drawer-header">
      <div class="title">

      </div>
      <div class="close" action-close>
        {% render 'icon-close' %}
      </div>
    </div>
    <div class="drawer-content-wrapper" drawer-content-wrapper>
      <div class="drawer-content" drawer-content >
  
      </div>
      <div class="drawer-loading" drawer-loading >
        <svg focusable="false" width="50" height="50" class="icon icon--spinner   " viewBox="25 25 50 50">
          <circle cx="50" cy="50" r="20" fill="none" stroke="#282828" stroke-width="4"></circle>
        </svg>
      </div>

    </div>
  </div>
</xuer-drawer>

<template id="search-tpl" data-title="{{ 'header.search.title' | t }}">
  <div class="search-container">
    <div class="search-form-container">
      <form id="predictive-search-form" class="search-form" action="{{ routes.search_url }}" method="get" autocomplete="off">
        <input type="hidden" name="type" value="product">
        <input type="hidden" name="options[prefix]" value="last">
        <div class="search-input">
          <input class="search" type="text" name="q" autocomplete="off" autocorrect="off"   aria-label="{{ 'header.search.title' | t }}" placeholder="{{ 'header.search.title_placeholder' | t }}">
          <button type="submit" class="search-submit button button-clearn" href="{{ routes.search_url }}">
            {% render 'icon-search' %}  
          </button>
        </div>
      </form>
    </div>
    <div class="search-suggest-wrapper" search-result >
      
    </div>
  </div>
</template>






