
{% comment %}
  Renders a radio

  Accepts:
  - id: {String} 
  - type: {String} 
  - name: {String} 
  - label: {String} 
  - required: {Boolean} 
  - className: {String} 
  - value: {String} 

  Usage:
  {% render 'form-radio', is_checked: true,value: 'red',name: 'color', label: 'color'   %}
{% endcomment %}


{%- liquid
  assign type = type | default: 'text'
-%}

<xuer-form-input class="xuer-input_wrapper {{ className }}">
  <input 
    type="{{ type }}" 
    id="{{ id }}" 
    class="xuer-input" 
    name="{{ name }}" 
    {% if required == true %}
      required="required"
    {% endif %}
    xuer-input
    autocomplete="off" 
    value="{{ value }}"
  />
  <label for="{{ id }}" class="xuer-input_label">{{ label | t }}</label>
</xuer-form-input>