{%- liquid
  assign main_background_color = '#ffffff'
  for block in section.blocks
    if forloop.first == true
      assign main_background_color = block.settings.slide_background_color
    endif
  endfor
-%}

{% style %}
#section-{{ section.id }} {
  --dot_color: {{ section.settings.dot_color }};
}
{% endstyle %}

<xuer-slideshow class="slideshow custom-section xuer-shopify-section xuer-shopify-section-full {% if section.settings.use_section_space %} use_section_space{%- endif -%} {% if section.settings.use_alt_color %} use_alt_color{%- endif -%}" id="section-{{ section.id }}">
  <div
    swiper
    id="swiper-{{ section.id }}" 
    class="swiper" 
    style="background: {{ main_background_color }}"
    data-swiper-loop="true"
    data-swiper-autoplay="true"
    data-swiper-slide-type="{{ section.settings.slide_transform_type }}"
    data-swiper-speed="{{ section.settings.slide_speed }}"
    data-swiper-text-type="{{ section.settings.text_animate_type }}"
  >
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        <div 
          class="swiper-slide" 
          data-background-color="{{ block.settings.slide_background_color }}" 
          id="block-{{ block.id }}"
          data-text-color="{{ block.settings.text_color }}"
        >
          {% style %}
            #block-{{ block.id }} {
              --block_text_color: {{ block.settings.text_color }};
              --block_text_position: {{ block.settings.text_position }};
              --block_text_alignment: {{ block.settings.text_alignment }};
            }
          {% endstyle %}
          <div class="slideshow-image xuer-image-wrapper {{ section.settings.section_height }}" >
            {%- if block.settings.image != blank -%}
              {%- 
                render 'image', 
                is_cover: true,
                image: block.settings.image 
              -%}
            {%- else -%}
              <div class="xuer-placeholder-image xuer-full">
                {{- 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' -}}
              </div>
            {%- endif -%}
          </div>
          <div class="slideshow-content_wrapper page_width" style="color: {{ block.settings.text_color }};">
            <div class="slideshow-content" swiper-animate-effect="fadeInUp" swiper-animate-duration="0.5s" swiper-animate-delay="0.3s">
              {% if block.settings.subheading != blank %}
                <h3 class="xuer-h6 slide-animate xuer-animate_duration-fast slideshow-content_subheading">
                  {{ block.settings.subheading }}
                </h3>
              {% endif %}
              {% if block.settings.heading != blank %}
                <h2 class="slide-animate xuer-animate_duration-fast slideshow-content_heading xuer-h2">
                  {{ block.settings.heading }}
                </h2>
              {% endif %}
              {% if block.settings.button_label != blank %}
                {% render 'form-button', 
                  label: block.settings.button_label, 
                  link: block.settings.link,
                  className: 'slide-animate slide-animate-button slideshow-content_button xuer-animate_duration-fast'
                %}
              {% endif %}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>

    <div class="swiper-pagination"></div>
  </div>
</xuer-slideshow>
{% schema %}
{
  "name": "slideshow",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "section_height",
      "label": "Section height",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to first image"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "full",
          "label": "Full screen"
        },
        {
          "value": "fixed",
          "label": "Fixed height"
        }
      ],
      "default": "adapt"
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 200,
      "max": 1000,
      "step": 20,
      "unit": "px",
      "label": "Desktop fixed height",
      "default": 600
    },
    {
      "type": "range",
      "id": "height_mobile",
      "min": 100,
      "max": 1000,
      "step": 20,
      "unit": "px",
      "label": "Mobile fixed height",
      "default": 460
    },
    {
      "id": "mobile_text_under",
      "type": "checkbox",
      "label": "Show text below image on mobile",
      "default": false
    },
    {
      "id": "show_dots",
      "type": "checkbox",
      "label": "Show dots",
      "default": false
    },
    {
      "type": "color",
      "id": "dot_color",
      "label": "Dot color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Animation"
    },
    {
      "type": "select",
      "id": "slide_transform_type",
      "label": "Slide animate type",
      "options": [
        {
          "value": "fade",
          "label": "Fade"
        },
        {
          "value": "slide",
          "label": "Slide"
        },
        {
          "value": "sweep",
          "label": "Sweep"
        }
      ],
      "default": "slide"
    },
    {
      "type": "select",
      "id": "text_animate_type",
      "label": "Text animate type",
      "options": [
        {
          "value": "fadeInRight",
          "label": "Fade in right"
        },
        {
          "value": "fadeInUp",
          "label": "Fade up"
        },
        {
          "value": "bounceIn",
          "label": "Bounce in"
        }
      ],
      "default": "fadeInRight"
    },
    {
      "type": "range",
      "id": "slide_speed",
      "min": 300,
      "max": 2000,
      "step": 50,
      "unit": "px",
      "label": "Slide speed",
      "default": 300
    },
    {
      "type": "checkbox",
      "id": "use_alt_color",
      "label": "Use alternate section color",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "use_section_space",
      "label": "Use section space",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "color",
          "id": "slide_background_color",
          "label": "Slide background color"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Image slide",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subheading",
          "default": "Tell your brand's story through images",
          "label": "Subheading"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button label"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#ffffff"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "text_position",
          "label": "Text position",
          "options": [
            {
              "value": "flex-start",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "flex-end",
              "label": "Right"
            }
          ],
          "default": "center"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
