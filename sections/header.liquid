{% style %}
#shopify-section-{{ section.id }} {
  --header_background_color: {{ section.settings.background_color }};
  --header_link_color: {{ section.settings.link_color }};
  {%- if section.settings.enable_sticky -%}
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    z-index: 10;
  {%- else -%}
    position: relative;
  {%- endif -%}
}
{% endstyle %}
<xuer-header class="header-wrapper  full-width-padding">
  <div class="page_width header-main">
    {%- liquid
      if section.settings.menu_alignment == 'left' 
        if section.settings.menu == blank and section.settings.enable_search
          render 'header-search'
        else
          render 'header-menu', section: section.settings
        endif
        render 'header-logo', section: section.settings
        render 'header-icons', enable_search: section.settings.enable_search and section.settings.menu != blank
      endif
  
      if section.settings.menu_alignment == 'center' 
        render 'header-logo'
        render 'header-menu'
        render 'header-icons', enable_search: section.settings.enable_search
      endif
    -%}
  </div>
</xuer-header>


{% schema %}
{
  "name": "Header",
  "class": "section-header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo",
      "info": "520 x 200px (recommended)"
    },
    {
      "type": "range",
      "id": "desktop_logo_width",
      "min": 30,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "logo width",
      "default": 150
    },
    {
      "type": "range",
      "id": "mobile_logo_width",
      "min": 30,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "mobile logo width",
      "default": 80
    },
    {
      "type": "checkbox",
      "id": "enable_sticky",
      "label": "Enable sticky header",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_search",
      "label": "Enable search",
      "default": true
    },
    {
      "type": "header",
      "content": "NAVIGATION"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "select",
      "id": "menu_alignment",
      "label": "Menu alignment",
      "options": [
        {
          "value": "left",
          "label": "left"
        },
        {
          "value": "center",
          "label": "center"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Color settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "default": "#02867f",
      "label": "Background color"
    },
    {
      "type": "color",
      "id": "link_color",
      "default": "#000000",
      "label": "Link color"
    }
  ]
}
{% endschema %}
