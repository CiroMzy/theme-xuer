{% style %}
  #section-{{ section.id }} {
    --height_desktop: {{ section.settings.height_desktop }}px;
    --height_mobile: {{ section.settings.height_mobile }}px;
    --content_horizontal_position: {{ section.settings.content_horizontal_position }};
    --content_vertical_position: {{ section.settings.content_vertical_position }};
    --content_background_color: {{ section.settings.content_background_color }};
    --content_color: {{ section.settings.content_color }};
    --content_width: {{ section.settings.content_width }}px;
    --title_font_size: {{ section.settings.title_font_size }}px;
    --text_alignment: {{ section.settings.text_alignment }};
  }
{% endstyle %}

<div id="section-{{ section.id }}" class="image-banner xuer-shopify-section {% if section.settings.use_section_space %} use_section_space{%- endif -%} {% if section.settings.use_alt_color %} use_alt_color{%- endif -%}">
  <div class="image-banner_container {% if section.settings.full_width == false %} page_width{%- endif -%}">
    {%- if section.settings.background_image != blank -%}
      {%- 
        render 'image', 
        is_cover: true,
        image: section.settings.background_image,
        height: section.settings.height_desktop,
        image_background_fixed: section.settings.image_background_fixed
      -%}
    {%- else -%}
      <div class="xuer-placeholder-image xuer-full">
        {{- 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg placeholder-background-dark' -}}
      </div>
    {%- endif -%}
    <div class="image-banner_content_wrapper page_width xuer-content_wrapper">
      <div class="image-banner_content xuer-content_main" >
        {% if section.settings.subheading != blank %}
          <h6 class="xuer-h6 xuer-line2 xuer-content_text xuer-animate_delay1" xuer-animated >{{ section.settings.subheading }}</h6>
        {% endif %}
        {% if section.settings.title != blank %}
          <h3 class="xuer-h3 xuer-line2 xuer-content_title xuer-animate_delay2" xuer-animated>{{ section.settings.title }}</h3>
        {% endif %}
        {% if section.settings.text != blank %}
          <p class="xuer-text xuer-line2 xuer-content_text xuer-animate_delay3" xuer-animated>{{ section.settings.text | newline_to_br }}</p>
        {% endif %}
        <div class="collage-block_buttons xuer-animate_delay4" xuer-animated>
          {% if section.settings.button_label_1 != blank %}
            {% render 'form-button', 
              label: section.settings.button_label_1, 
              link: section.settings.button_link_1
            %}
          {% endif %}
          {% if section.settings.button_label_2 != blank %}
            {% render 'form-button', 
              label: section.settings.button_label_2, 
              link: section.settings.button_link_2
            %}
          {% endif %}
          
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Image banner",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "checkbox",
      "id": "image_background_fixed",
      "label": "Image fixed",
      "default": false
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 200,
      "max": 1000,
      "step": 20,
      "unit": "px",
      "label": "Desktop fixed height",
      "default": 600
    },
    {
      "type": "range",
      "id": "height_mobile",
      "min": 100,
      "max": 1000,
      "step": 20,
      "unit": "px",
      "label": "Mobile fixed height",
      "default": 460
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 200,
      "max": 800,
      "step": 20,
      "unit": "px",
      "label": "Content width",
      "default": 380
    },
    {
      "type": "text",
      "id": "subheading",
      "default": "Tell your brand's story through images",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Image banner"
    },
    {
      "type": "textarea",
      "id": "text",
      "default": "Tell your brand's story through images",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_label_1",
      "default": "Button label 1",
      "label": "Button label 1"
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "Button link 1"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "default": "Button label 2",
      "label": "Button label 2"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Button link 2"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "min": 20,
      "max": 50,
      "step": 2,
      "label": "Heading font size",
      "default": 46
    },
    {
      "type": "color",
      "id": "content_color",
      "label": "Content color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "content_background_color",
      "label": "Content background color"
    },
    {
      "type": "select",
      "id": "content_horizontal_position",
      "label": "Content horizontal position",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "content_vertical_position",
      "label": "Content vertical position",
      "options": [
        {
          "value": "flex-start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Botton"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "use_alt_color",
      "label": "Use alternate section color",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "use_section_space",
      "label": "Use section space",
      "default": true
    }
  ],
  "blocks": [

  ],
  "presets": [
    {
      "name": "Image banner",
      "blocks": [

      ]
    }
  ]
}
{% endschema %}
