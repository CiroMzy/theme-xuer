{%- liquid
  assign multiple = false
  if section.blocks.size > 1
    assign multiple = true
  endif
-%}
{% style %}
#section-id-{{ section.id }} {
  --announcement-background: {{ section.settings.background_color }};
  --announcement-text: {{ section.settings.text_color }};
  --link-underline: {{ section.settings.text_color | color_modify: "alpha", 0.6 }};
  --announcement-font-size: {{ section.settings.font_size }}px;
}
{% endstyle %}
<xu-announcement-bar 
  id="section-id-{{ section.id }}" 
  class="announcement-bar {% if multiple %}announcement-bar--multiple{% endif %}"
>
  <div class="announcement-bar-list">
    {%- for block in section.blocks -%}
      <announcement-bar-item>
        {%- if block.settings.text != blank -%}
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="announcement-bar-link ">
          {%- endif -%}
              <div class="layout-width">
                <p class="announcement-bar__message">
                  {{ block.settings.text | escape }}
                </p>
              </div>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </announcement-bar-item>
    {%- endfor -%}
  </div>
</xu-announcement-bar>

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "background color",
      "default": "#4a4a4a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "text color",
      "default": "#212121"
    },
    {
      "type": "range",
      "id": "message_font_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "font size",
      "default": 14
    }
  ],
  "blocks": [
    {
      "type": "announcement-item",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "Welcome to our store"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement-item"
      }
    ]
  }
}
{% endschema %}
