<div class="page_width main-list-collections ">
  {% if section.settings.title != blank %}
    <h1 class="xuer-h1 xuer-page-title ">{{ section.settings.title }}</h1>
  {% endif %}
  <div class="xuer-page-main">
    {%- paginate collections by section.settings.collections_per_page -%}
      <div class="list-collections_list">
        {%- liquid
          if section.settings.display_type == 'all'
            assign collections_list = collections
          else
            assign collections_list = section.blocks
          endif
        -%}
        {%- for item in collections_list -%}
          {%- liquid
            if section.settings.display_type == 'all'
              assign collection = item
              assign collection_image = collection.featured_image
            else
              assign collection = item.settings.collection
              assign collection_image = item.settings.image | default: collection.featured_image
            endif
          -%}
          <a href="{{ collection.url }}" class="list-collections__item xuer-image-enlarge xuer-overlay_wrapper">
            {% render 'image', image: collection_image, sizes: '25vw', default_image: 'no_image' %}
            {%- if section.settings.show_collection_title -%}
              <div class="xuer-overlay">
                <div class="xuer-overlay_cover" style="opacity: {{ section.settings.overlay_opacity }}%;;background-color: {{ section.settings.overlay_color }};"></div>
                <h2 class="xuer-overlay_title xuer-h2" style="color: {{ section.settings.title_color }}">{{ collection.title }}</h2>
              </div>
            {%- endif -%}
          </a>
        {%- endfor -%}
      </div>
      {% if section.settings.display_type == 'all' %}
        {% render 'paginate', paginate: paginate %}
      {% endif %}
    {%- endpaginate -%}
  </div>
</h1>

{% schema %}
{
  "name": "Collection list",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Collections",
      "label": "Page title"
    },
    {
      "type": "checkbox",
      "id": "show_collection_title",
      "label": "Show collection title",
      "default": true
    },
    {
      "type": "radio",
      "id": "display_type",
      "label": "Show collections",
      "default": "all",
      "options": [
        {
          "value": "all",
          "label": "All"
        },
        {
          "value": "selected",
          "label": "Selected"
        }
      ]
    },
    {
      "type": "range",
      "id": "collections_per_page",
      "label": "Collections per page",
      "info": "Pagination only applies when 'All' is selected",
      "min": 3,
      "max": 48,
      "step": 3,
      "default": 30
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1100 x 1400px .jpg recommended. If none is set, collection image is used."
        }
      ]
    }
  ]
}
{% endschema %}
