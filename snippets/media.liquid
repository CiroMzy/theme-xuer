<div class="media-container">
{% case media.media_type %}
  {% when 'image' %}
    <div class="media-image media-item ">
      {% render 'image', 
        image: media.preview_image, 
        min_aspect_ratio: min_aspect_ratio, 
        sizes: sizes,
        is_inbox: true
      %}
    </div>
  {% when 'external_video', 'video' %}
    ====== video =====
  {% when 'model' %}
    ====== model ======
  {% else %}
    ===== else ====
{% endcase %}
</div>