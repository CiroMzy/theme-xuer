
{% style %}

{{ settings.type_header_font | font_face: font_display: 'swap' }}
{{ settings.type_base_font | font_face: type_base_font: 'swap' }}
:root {
  /* font-family */
  --font-heading-family: {{ settings.type_header_font.family }};
  --font-base-family: {{ settings.type_base_font.family }};

  /***********
  * colors
  */
  --primary_color: {{ settings.primary_color }};
  --primary_color_rgb: {{ settings.primary_color.red }}, {{ settings.primary_color.green }}, {{ settings.primary_color.blue }};
  --primary_color_fade: rgba({{ settings.primary_color.red }}, {{ settings.primary_color.green }}, {{ settings.primary_color.blue }}, 0.03);
  --text_color: {{ settings.text_color }};
  --text_color_fade: rgba({{ settings.text_color.red }}, {{ settings.text_color.green }}, {{ settings.text_color.blue }}, 0.6) ;
  --border_color: {{ settings.border_color }};
  --success_color: {{ settings.success_color }};
  --success_color_fade: rgba({{ settings.success_color.red }}, {{ settings.success_color.green }}, {{ settings.success_color.blue }}, 0.05);
  --error_color:{{ settings.error_color }};
  --error_color_fade: rgba({{ settings.error_color.red }}, {{ settings.error_color.green }}, {{ settings.error_color.blue }}, 0.05);
  --background_color:{{ settings.background_color }};
  --secondary_background_color:{{ settings.secondary_background_color }};
  --heading_color:{{ settings.heading_color }};
  --section_background_color: {{ settings.section_background_color }};
  --product_image_background_color: {{ settings.product_image_background_color }};

  /* Bottons */
  --primary_button_background_color: {{ settings.primary_button_background_color }};
  --primary_button_background_color_fade: rgba({{ settings.primary_button_background_color.red }}, {{ settings.primary_button_background_color.green }}, {{ settings.primary_button_background_color.blue }}, 0.9);
  --primary_button_text_color: {{ settings.primary_button_text_color }};
  --secondary_button_background_color: {{ settings.secondary_button_background_color }};
  --secondary_button_background_color_fade: rgba({{ settings.secondary_button_background_color.red }}, {{ settings.secondary_button_background_color.green }}, {{ settings.secondary_button_background_color.blue }}, 0.9);
  --secondary_button_text_color: {{ settings.secondary_button_text_color }};
  --button_border_radius: {{ settings.button_border_radius }}px;

  --heading_text_transform: {{ settings.heading_text_transform }};

  /* Layout */
  --section-grid-column-count: 3;
  --section_space: 24px;
}
.page_width {
  width: {{ settings.page_width }}px;
  margin:0 auto;
}

{% endstyle %}
<script>
var theme = theme || {}
theme.routes = {
  predictive_search_url: '{{ routes.predictive_search_url }}',
  cart_add_url: '{{ routes.cart_add_url }}',
  cart_add_url_js: '{{ routes.cart_add_url }}.js',
  cart_url_js: '{{ routes.cart_url }}.js',
  product_recommendations_url: {{ routes.product_recommendations_url | json }},
  cart_change_url: {{ routes.cart_change_url | json }},
  account_addresses_url: {{ routes.account_addresses_url | json }},
  root_url: {{ routes.root_url | json }},
  host: {{ request.host | json }}
}
theme.language = {
  product_add_to_cart: {{ 'product.add_to_cart' | t | json }},
  product_variant_no_stock: {{ 'product.no_stock' | t | json }},
  confirm: {{ 'general.confirm' | t | json }},
  close: {{ 'general.close' | t | json }},
  delete_addresses_confirm: {{ 'account.delete_addresses_confirm' | t | json }},
}
</script>

