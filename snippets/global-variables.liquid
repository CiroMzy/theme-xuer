{% style %}

:root {
  /***********
  * colors
  */
  
  --primary_color: {{ settings.primary_color }};
  --primary_color_rgb: {{ settings.primary_color.red }}, {{ settings.primary_color.green }}, {{ settings.primary_color.blue }};
  --text_color: {{ settings.text_color }};
  --text_color_rgb: {{ settings.text_color.red }}, {{ settings.text_color.green }}, {{ settings.text_color.blue }};
  --text_color_fade: rgba(var(--text_color_rgb), 0.6) ;
  --link_color: {{ settings.link_color }};
  --link_active_color: {{ settings.link_active_color }};
  --border_color: {{ settings.border_color }};
  --error_color: {{ settings.error_color }};
  --error_background_color:{{ settings.error_background_color }};

  /* Announcement bar */
  --announcement_background_color: {{ settings.announcement_background_color }};
  --announcement_text_color: {{ settings.announcement_text_color }};
  --announcement_link_color: {{ settings.announcement_link_color }};
  --announcement_link_active_color: {{ settings.announcement_link_active_color }};
  /* Header */
  --header_background_color: {{ settings.header_background_color }};
  --header_link_color: {{ settings.header_link_color }};
  
  /* Footer */
  --footer_background_color: {{ settings.footer_background_color }};
  --footer_text_color: {{ settings.footer_text_color }};
  --footer_link_hover_color: {{ settings.footer_link_hover_color }};
  
  /* Bottons */
  --button_fill_text_color: {{ settings.button_fill_text_color }};
  --button_fill_background_color: {{ settings.button_fill_background_color }};
  --button_outline_text_color: {{ settings.button_outline_text_color }};
  --button_outline_background_color: {{ settings.button_outline_background_color }};
  --button_outline_border_color: {{ settings.button_outline_border_color }};
  --button_border_radius: {{ settings.button_border_radius }}px;


  /* Form */
  --form_input_height: {{ settings.form_input_height }}px;


  --text_border_color: rgba(var(--text_color_rgb), 0.1);






  --background_color: {{ settings.background_color }};
  --accent_color: {{ settings.accent_color }};
  --inverse_color: {{ settings.inverse_color }};




  --link_decoration: {% if settings.link_underline %} underline {% else %} none {% endif %};
}
.page_width {
  width: {{ settings.page_width }}px;
  margin:0 auto;
}

{% endstyle %}

<script>
var theme = theme || {}
theme.routes = {
  predictive_search_url: '{{ routes.predictive_search_url }}',
  cart_add_url: '{{ routes.cart_add_url }}',
  cart_add_url_js: '{{ routes.cart_add_url }}.js',
  cart_url_js: '{{ routes.cart_url }}.js',
  product_recommendations_url: {{ routes.product_recommendations_url | json }},
  cart_change_url: {{ routes.cart_change_url | json }},
  account_addresses_url: {{ routes.account_addresses_url | json }},
}
theme.language = {
  product_add_to_cart: {{ 'product.add_to_cart' | t | json }},
  product_variant_no_stock: {{ 'product.no_stock' | t | json }},
}
</script>

