
{% comment %}
  Renders a radio

  Accepts:
  - id: {String} 
  - type: {String} 
  - name: {String} 
  - label: {String} 
  - required: {Boolean} 
  - submit_button: {Boolean} 
  - className: {String} 
  - value: {String} 

  Usage:
  {% render 'form-radio', is_checked: true,value: 'red',name: 'color', label: 'color'   %}
{% endcomment %}


{%- liquid
  assign type = type | default: 'text'
-%}

<xuer-form-input class="xuer-input_wrapper {{ className }}" {% if submit_button == true %} submit-button {% endif %}>
  <input 
    type="{{ type }}" 
    id="{{ id }}" 
    class="xuer-input" 
    name="{{ name }}" 
    {% if required == true %}
      required="required"
    {% endif %}
    xuer-input
    value="{{ value }}"
  />
  <label for="{{ id }}" class="xuer-input_label">{{ label | t }}</label>
  {% if submit_button == true %}
    <button class="xuer-input_submit xuer-button clean" type="submit">
      {% render 'icon', name: 'arrow-right-line' %}
    </button>
  {% endif %}
</xuer-form-input>